ateStatus",					data: "ref="+ref+"&status="+status,					success: function(msg){							alert("success");							window.location.hash = site_url + 'penjualan/view/{$this->uri->segment(3)}';							window.location.reload();					},					error : function(msg){						//alert("masuk error");					}			});		}	}	</script>